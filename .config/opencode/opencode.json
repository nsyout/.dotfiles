{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "external_directory": {
      "*": "ask",
      "~/.config/opencode/**": "allow",
      "~/.dotfiles/**": "allow",
      "~/Code/**": "allow",
      "~/.local/share/opencode/mcp-auth.json": "deny"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.envrc": "deny",
      "secrets/*": "deny",
      ".dev.vars": "ask",
      "~/.local/share/opencode/mcp-auth.json": "deny"
    },
    "bash": {
      "*": "ask",
      "ast-grep *": "allow",
      "awk *": "allow",
      "basename *": "allow",
      "biome *": "allow",
      "bun *": "allow",
      "cargo *": "allow",
      "cat *": "allow",
      "cloc *": "allow",
      "cp *": "allow",
      "date *": "allow",
      "diff *": "allow",
      "dirname *": "allow",
      "doggo *": "allow",
      "dot *": "allow",
      "du *": "allow",
      "echo *": "allow",
      "fd *": "allow",
      "file *": "allow",
      "find *": "allow",
      "fnm *": "allow",
      "fzf *": "allow",
      "gh *": "allow",
      "gh * approve*": "ask",
      "gh * close*": "ask",
      "gh * comment*": "ask",
      "gh * create*": "ask",
      "gh * delete*": "ask",
      "gh * edit*": "ask",
      "gh * merge*": "ask",
      "gh * reopen*": "ask",
      "gh * review*": "ask",
      "gh repo clone*": "allow",
      "git *": "allow",
      "git push*": "ask",
      "go *": "allow",
      "grep *": "allow",
      "gsed *": "allow",
      "gunzip *": "allow",
      "gzip *": "allow",
      "head *": "allow",
      "hostname": "allow",
      "id": "allow",
      "jq *": "allow",
      "ls *": "allow",
      "make *": "allow",
      "mkdir *": "allow",
      "mv *": "allow",
      "npm *": "allow",
      "open *": "allow",
      "pbcopy": "allow",
      "pbpaste": "allow",
      "pnpm *": "allow",
      "prettier *": "allow",

      "printf *": "allow",
      "pwd": "allow",
      "readlink *": "allow",
      "realpath *": "allow",
      "rg *": "allow",
      "sed *": "allow",
      "shellcheck *": "allow",
      "sort *": "allow",
      "stat *": "allow",
      "stow *": "allow",
      "stylua *": "allow",
      "tail *": "allow",
      "tar *": "allow",
      "tee *": "allow",
      "touch *": "allow",
      "tr *": "allow",
      "tree *": "allow",
      "true": "allow",
      "tsc *": "allow",
      "turbo *": "allow",
      "uname *": "allow",
      "uniq *": "allow",
      "unzip *": "allow",
      "vite *": "allow",
      "vitest *": "allow",
      "wc *": "allow",
      "which *": "allow",
      "whoami": "allow",
      "xargs *": "ask",
      "yarn *": "allow",
      "z *": "allow",
      "zip *": "allow",
      "zoxide *": "allow"
    },
    "edit": "allow",
    "webfetch": "ask"
  },
  "theme": "flexoki",
  "keybinds": {
    "leader": "ctrl+o",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "input_delete_to_line_start": "none",
    "input_delete": "delete,shift+delete",
    "terminal_title_toggle": "none"
  },
  "plugin": [],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    },
    "opensrc": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "opensrc-mcp"
      ],
      "enabled": true
    },
    "overseer": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@dmmulroy/overseer",
        "mcp"
      ],
      "enabled": true
    }
  }
}
